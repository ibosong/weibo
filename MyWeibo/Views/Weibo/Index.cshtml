@model MyWeibo.ViewModels.MyHome

@{
    ViewBag.Title = "Index";
   
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
@Styles.Render("~/Content/themes/base/css")
<script src="~/Scripts/ZebraDialog/zebra_dialog.js"></script>
<link href="~/Content/ZebraDialog/zebra_dialog.css" rel="stylesheet" />
<script>
    $(function () {

        
        $("#postbtn").click(function () {
            
            var g = '00000000-0000-0000-0000-000000000000';
            
           //发送微博
            $.get("/Weibo/PostMessage",
                {
                    "content": $("#posttxt").val(),
                    "copyMsgId":g
                }, function (data) {
                    
                    $.Zebra_Dialog(data.message, {
                        'buttons': false,
                        'modal': true,
                        'width': 200,
                        'type':false,
                        'auto_close': 700
                    });
                }
                
                )
        });

        $("#copyMsgDialog").dialog({
            autoOpen: false,
            modal: true,
            height: 300,
            width: 600,
            buttons: {
                "发送": function () {
                    $.get("/Weibo/PostMessage",
                         {
                             "content": $(".copyMsg").val(),
                             "copyMsgId": $("#copyMsgId").attr("value")
                         },
                function (data) {

                    $.Zebra_Dialog(data.message, {
                        'buttons': false,
                        'modal': true,
                        'width': 200,
                        'type': false,
                        'auto_close': 700
                    });
                }
                );
                    $(this).dialog("close");
                }
            }
        });
        
       
    });

    
    function copyMsgfunction(msgId) {


        $.get("/Weibo/CopyMessagePartial", { msgId: msgId }, function (data) {

            $("#copyMsgDialog").html(data);
        });
        $("#copyMsgDialog").dialog("open");
